#!/usr/bin/env bash

THIS="$(realpath "$0" 2>/dev/null || command -v "$0")"
HERE="$(dirname "$THIS")"

[[ -n "$LOG_NAME" ]] || LOG_NAME="configure"
. "$HERE"/log
export log

if [[ $# -gt 0 ]]; then
  for tool in $@; do
    bash "${HERE}/machine-tools/${tool}.sh" config
  done
else
  for tool_script in "$HERE"/machine-tools/*.sh; do
    bash "$tool_script" config
  done
fi
